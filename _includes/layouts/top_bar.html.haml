.sticky.contain-to-grid
  %nav.top-bar(data-topbar role='navigation' data-options='sticky_on:[medium,large,xlarge,xxlarge]')
    %ul.title-area
      %li.name
      %li.toggle-topbar
        %a{href: 'javacript:void(0)'}
          %span Menu

    %section.top-bar-section
      %ul.left
        {% unless page.path == 'index.html' %}
        %li
          %a{ href: "{{ '/' | prepend: site.baseurl }}"} Home
        {% endunless %}

        {% assign links = 'contact_us|schools|nurseries|parents' | split: '|' %}
        {% for link in links %}
        {%   assign text = link | capitalize | split: '_' %}
        %li{class: "{% if page.path contains link %}{{ 'active'}}{% endif %}" }
          %a{data: { slide_to: ''}, href: "\#{{link}}" }
            {% for word in text %}
            {{   word || capitalize }}
            {% endfor %}

        {% endfor %}

      {% include social_icons.html %}
