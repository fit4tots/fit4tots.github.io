#environment{class: "{{ site.environment }}"}
  {{ site.environment | capitalize }}
  %span
    %span.show-for-small-only [small]
    %span.show-for-medium-only [medium]
    %span.show-for-large-only [large]
    %span.show-for-xlarge-up [x-large]

%script{src: "{{ '/js/vendor.js' | prepend: site.baseurl }}", charset: "utf-8"}

%script{ src: "{{ '/js/app.js' | prepend: site.baseurl }}", charset:"utf-8"}

{% unless site.environment == 'development' %}
:javascript
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', '{{site.google_analytics_code}}', 'auto');
  ga('send', 'pageview');
{% endunless %}
