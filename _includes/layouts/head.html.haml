%head
  %meta{charset: 'utf-9'}
  %meta(content='text/html; charset=UTF-8' http-equiv='Content-Type')
  %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}
  %title<
    {% if page.title %}{{ page.title | strip_html | strip_newlines | prepend: ' - ' | prepend: site.title }}{% else %}{{ site.title }}{% endif %}

  %meta{name: "description",
        content: "{% if page.excerpt %}{{ page.excerpt | strip_html | strip_newlines | truncate: 160 }}{% else %}{{ site.description | strip_newlines }}{% endif %}" }

  %link{rel: 'stylesheet', media: 'all',
        href: "{{ '/css/app.css' | prepend: site.baseurl }}"}

  %link{rel: 'stylesheet', media: 'print',
        href: "{{ '/css/print.css' | prepend: site.baseurl }}"}


  %link{rel: 'canonical', href: "{{ page.url | replace: 'index.html', '' | prepend: site.baseurl | prepend: site.url }}" }

  %link{rel: 'alternate', type: 'application/rss+xml', title: "{{ site.title }}",
        href: "{{ '/feed.xml' | prepend: site.baseurl | prepend: site.url }}" }

  %script{src: "{{ '/js/modernizr-2.8.3.min.js' | prepend: site.baseurl }}",
          charset: 'utf-8'}

